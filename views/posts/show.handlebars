<section class="post bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold mb-2">{{post.title}}</h2>
  <p class="text-gray-500">Posted by {{post.User.username}} on {{post.createdAt}}</p>
  <div class="content mt-4 text-gray-700">
    {{post.content}}
  </div>

  {{#if user}}
  <h3 class="text-xl font-semibold mt-6 mb-2">Leave a Comment</h3>
  <form action="/posts/{{post.id}}/comments" method="POST">
    <textarea name="content" rows="4" placeholder="Add your comment" required class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200"></textarea>
    <button type="submit" class="mt-2 px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-200">Comment</button>
  </form>
  {{else}}
  <p class="text-xl font-semibold mt-6 mb-2"><a href="/login" class="text-blue-500 hover:underline">Login</a> to leave a comment.</p>
  {{/if}}

  {{#if post.comments.length}}
  <h3 class="text-xl font-semibold mt-6 mb-2">Comments</h3>
  <ul class="comment-list">
    {{#each post.comments}}
    <li class="mb-4">
      <p>{{this.content}}</p>
      <p class="text-gray-500 mt-2">Commented by {{this.user.username}} on {{this.createdAt}}</p>
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p class="text-xl font-semibold mt-6 mb-2">No comments yet. Be the first to comment!</p>
  {{/if}}
</section>
