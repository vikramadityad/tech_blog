
  <section class="post">
    <h2>{{post.title}}</h2>
    <p>Posted by {{post.User.username}} on {{post.createdAt}}</p>
    <div class="content">
      {{post.content}}
    </div>

    {{#if user}}
      <h3>Leave a Comment</h3>
      <form action="/posts/{{post.id}}/comments" method="POST">
        <textarea name="content" rows="4" placeholder="Add your comment" required></textarea>
        <button type="submit">Comment</button>
      </form>
    {{else}}
      <p><a href="/login">Login</a> to leave a comment.</p>
    {{/if}}

    {{#if post.comments.length}}
      <h3>Comments</h3>
      <ul class="comment-list">
        {{#each post.comments}}
          <li>
            <p>{{this.content}}</p>
            <p>Commented by {{this.user.username}} on {{this.createdAt}}</p>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No comments yet. Be the first to comment!</p>
    {{/if}}
  </section>

