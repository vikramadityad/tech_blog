{{!-- Extend the main layout --}}
{{#if posts.length}}
    <div class="max-w-2xl mx-auto mt-10 px-4 space-y-6">
    {{#each posts}}
    <div class="bg-white p-6 rounded shadow">
      <h2 class="text-xl font-semibold mb-2"> <a href="/posts/{{id}}">{{title}}</a></h2>
      <p>{{content}}</p>
      <p>By {{user.username}}</p>
      <p class="mt-4 text-gray-500">{{createdAt}}</p>
    </div>
    {{/each}}
    <div class="max-w-2xl mx-auto mt-10 px-4 space-y-6">
{{else}}
    <p>No blog posts available yet.</p>
{{/if}}