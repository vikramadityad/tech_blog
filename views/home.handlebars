<div class="bg-gray-100 min-h-screen py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    {{#if posts.length}}
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Latest Tech Blog Posts</h1>
    <div class="space-y-6">
      {{#each posts}}
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold mb-2"><a href="/posts/{{id}}" class="text-blue-600 hover:underline">{{title}}</a></h2>
        <p class="text-gray-700">{{content}}</p>
        <div class="flex items-center mt-4 text-gray-600">
          <p class="mr-2">Posted by {{user.username}}</p>
          <p>{{createdAt}}</p>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <p class="text-xl font-semibold text-gray-900">No blog posts available yet.</p>
    {{/if}}
  </div>
</div>
