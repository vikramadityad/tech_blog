<section class="dashboard">
  <h2>Welcome to Your Dashboard, {{user.username}}!</h2>

  {{#if user.posts.length}}
  <h3>Your Blog Posts</h3>
  <ul class="post-list">
    {{#each user.posts}}
    <li>
      <h4><a href="/post/{{id}}">{{title}}</a></h4>
      <p>{{createdAt}}</p>
      <p>{{content}}</p>
      <a href="/post/edit/{{id}}">Edit</a> | <a href="/post/delete/{{id}}">Delete</a>
    </li>
    {{/each}}
    <p></p><a href="/posts/new">Write a post</a>.</p>
  </ul>
  {{else}}
  <p>You haven't created any blog posts yet. <a href="/new-post">Create one now</a>.</p>
  {{/if}}
</section>